<odoo>

    <record id="act_account_2_folder" model="ir.actions.act_window">
        <field name="name">Folders</field>
        <field name="res_model">webmail.folder</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('account_id', 'in', active_ids)]</field>
    </record>

    <record id="act_account_2_mail" model="ir.actions.act_window">
        <field name="name">Mails</field>
        <field name="res_model">webmail.mail</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('account_id', 'in', active_ids)]</field>
    </record>

    <record id="view_webmail_account_search" model="ir.ui.view">
        <field name="model">webmail.account</field>
        <field name="arch" type="xml">
            <search>
                <field name="login" />
                <field name="url" />
            </search>
        </field>
    </record>

    <record id="view_webmail_account_tree" model="ir.ui.view">
        <field name="model">webmail.account</field>
        <field name="arch" type="xml">
            <tree>
                <field name="login" />
                <field name="url" />
                <field name="folder_qty" />
                <button
                    string="Fetch Folders"
                    type="object"
                    name="button_fetch_folders"
                />
                <field name="mail_qty" />
                <button string="Fetch Mails" type="object" name="button_fetch_mails" />
            </tree>
        </field>
    </record>

    <record id="view_webmail_account_form" model="ir.ui.view">
        <field name="model">webmail.account</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        string="Test connexion"
                        type="object"
                        name="button_test_connexion"
                    />
                    <button
                        string="Fetch Folders"
                        type="object"
                        name="button_fetch_folders"
                    />
                    <button
                        string="Fetch Mails"
                        type="object"
                        name="button_fetch_mails"
                    />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            class="oe_stat_button"
                            name="%(act_account_2_folder)d"
                            type="action"
                            icon="fa-pencil-square-o"
                        >
                            <field name="folder_qty" widget="statinfo" />
                        </button>
                        <button
                            class="oe_stat_button"
                            name="%(act_account_2_mail)d"
                            type="action"
                            icon="fa-pencil-square-o"
                        >
                            <field name="mail_qty" widget="statinfo" />
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="url" />
                            <field name="login" />
                            <field name="password" />
                            <field name="user_id" />
                        </group>
                        <group />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_webmail_account" model="ir.actions.act_window">
        <field name="name">Accounts</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">webmail.account</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_webmail_account"
        name="Accounts"
        parent="menu_configuration"
        action="action_webmail_account"
        sequence="50"
    />

</odoo>
