<odoo>

    <record id="view_webmail_mail_search" model="ir.ui.view">
        <field name="model">webmail.mail</field>
        <field name="arch" type="xml">
            <search>
                <field name="technical_subject" />
                <field name="folder_id" />
            </search>
        </field>
    </record>

    <record id="view_webmail_mail_tree" model="ir.ui.view">
        <field name="model">webmail.mail</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id" optional="hide" />
                <field name="technical_message_id" optional="hide" />
                <field name="technical_subject" />
                <field name="display_date" />
                <field name="folder_id" optional="hide" />
                <field name="conversation_id" optional="hide" />
                <field name="technical_in_reply_to" optional="hide" />
            </tree>
        </field>
    </record>

    <record id="view_webmail_mail_form" model="ir.ui.view">
        <field name="model">webmail.mail</field>
        <field name="arch" type="xml">
            <form>
                <header />
                <sheet>
                    <div class="oe_button_box" name="button_box" />
                    <group col="4">
                        <field name="conversation_id" />
                        <field name="origin_mail_id" />
                        <field name="folder_id" />
                        <newline />
                        <field name="technical_message_id" />
                        <field name="technical_in_reply_to" />
                        <field name="technical_date" />
                        <field name="technical_subject" />
                        <field name="technical_from" />
                        <field name="technical_cc" />
                        <field name="technical_to" />
                        <field name="technical_body" widget="html" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_webmail_mail" model="ir.actions.act_window">
        <field name="name">Mails</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">webmail.mail</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_webmail_mail"
        name="Mails"
        parent="menu_technical_mail"
        action="action_webmail_mail"
        sequence="5"
    />

</odoo>
