<odoo>

    <record id="act_folder_2_folder" model="ir.actions.act_window">
        <field name="name">Folders</field>
        <field name="res_model">webmail.folder</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('parent_id', 'in', active_ids)]</field>
    </record>

    <record id="act_folder_2_mail" model="ir.actions.act_window">
        <field name="name">Mails</field>
        <field name="res_model">webmail.mail</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('folder_id', 'in', active_ids)]</field>
    </record>

    <record id="view_webmail_folder_search" model="ir.ui.view">
        <field name="model">webmail.folder</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="account_id" />
            </search>
        </field>
    </record>

    <record id="view_webmail_folder_tree" model="ir.ui.view">
        <field name="model">webmail.folder</field>
        <field name="arch" type="xml">
            <tree>
                <field name="technical_name" />
                <field name="account_id" />
                <field name="mail_qty" />
                    <button
                    string="Fetch Mails"
                    type="object"
                    name="button_fetch_mails"
                />
            </tree>
        </field>
    </record>

    <record id="view_webmail_folder_form" model="ir.ui.view">
        <field name="model">webmail.folder</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        string="Fetch Mails"
                        type="object"
                        name="button_fetch_mails"
                    />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            class="oe_stat_button"
                            name="%(act_folder_2_folder)d"
                            type="action"
                            icon="fa-pencil-square-o"
                        >
                            <field name="folder_qty" widget="statinfo" />
                        </button>

                        <button
                            class="oe_stat_button"
                            name="%(act_folder_2_mail)d"
                            type="action"
                            icon="fa-pencil-square-o"
                        >
                            <field name="mail_qty" widget="statinfo" />
                        </button>

                    </div>
                    <group>
                        <group>
                            <field name="name" />
                            <field
                                name="parent_id"
                                attrs="{'invisible': [('parent_id', '=', False)]}"
                            />
                            <field name="technical_name" invisible="1" />
                            <field name="account_id" />
                        </group>
                        <group />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_webmail_folder" model="ir.actions.act_window">
        <field name="name">Folders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">webmail.folder</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_webmail_folder"
        name="Folders"
        parent="menu_technical_mail"
        action="action_webmail_folder"
        sequence="100"
    />

</odoo>
