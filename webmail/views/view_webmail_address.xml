<odoo>

    <record id="view_webmail_address_search" model="ir.ui.view">
        <field name="model">webmail.address</field>
        <field name="arch" type="xml">
            <search>
                <field name="email" />
                <field name="name" />
                <field name="user_id" />
            </search>
        </field>
    </record>

    <record id="view_webmail_address_tree" model="ir.ui.view">
        <field name="model">webmail.address</field>
        <field name="arch" type="xml">
            <tree>
                <field name="email" />
                <field name="name" />
                <field name="user_id" />
            </tree>
        </field>
    </record>

    <record id="view_webmail_address_form" model="ir.ui.view">
        <field name="model">webmail.address</field>
        <field name="arch" type="xml">
            <form>
                <header />
                <sheet>
                    <div class="oe_button_box" name="button_box" />
                    <group>
                        <group>
                            <field name="email" />
                            <field name="name" />
                            <field name="user_id" />
                        </group>
                        <group />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_webmail_address" model="ir.actions.act_window">
        <field name="name">Addresses</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">webmail.address</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_webmail_address"
        name="Addresses"
        parent="menu_technical_mail"
        action="action_webmail_address"
        sequence="200"
    />

</odoo>
